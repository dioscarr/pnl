services:
  db:
    container_name: db
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Express
      SA_PASSWORD: Password@123
    image: dioscarr/mssql:2019
    ports:
    - published: 1433
      target: 1433
    volumes:
    - mssql-volume:/var/opt/mssql:rw
  https-portal:
    environment:
      DOMAINS: devpnl.app -> http://pnl:5000
      STAGE: production
      WEBSOCKET: "true"
    image: steveltn/https-portal:latest
    links:
    - pnl
    ports:
    - published: 80
      target: 80
    - published: 443
      target: 443
    restart: always
  pnl:
    build:
      context: D:\Users\diosc\Repos\pnl
      dockerfile: Dockerfile
    container_name: pnl
    depends_on:
    - db
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:5000;
    image: dioscarr/pnl
    ports:
    - published: 5000
      target: 5000
    volumes:
    - C:\Users\Diosc\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Diosc\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.7'
volumes:
  mssql-volume: {}